<div class="hidden">
  <% @host_availability.each do |date| %>
    <div class="avail-dates"><%= date.date %></div>
  <% end %>
  <% @host.bookings.each do |booking| %>
  <div class="booked-dates"><%= booking.date %></div>
<% end %>
</div>


<h2> You are booking <%= @activity.name.capitalize %> with <%= @activity.host.first_name %></h2>

<p class='errors'></p>
<%= month_calendar do |date| %>
  <%= date %>
<% end %>

<%= simple_form_for [@activity, @user, @booking] do |f| %>
  <%= f.input :date, as: :hidden, class: "date-hidden" %>
  <%= f.input :group_size, class: "my-5" %>
  <%= f.button :submit, class: 'date-submit btn-main my-3', value: "Book Now" %>
<% end %>


<div class='hidden'>
<h2>Taken Dates</h2>
<% @activity.bookings.each do |booking| %>
<p class="taken-dates"><%= booking.date %></p>
<% end %>
</div>
<%= javascript_pack_tag "calendar" %>
