<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src=<%= "https://source.unsplash.com/1600x900/?#{@activity.name}" %> alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src=<%= "https://source.unsplash.com/featured/1600x900/?#{@activity.name}" %> alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src=<%= "https://source.unsplash.com/1600x900/?#{@activity.city}}" %> alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container activity-details-container">
  <div class="activity-name-location">
    <h1><%= @activity.name.capitalize %></h1>
    <h5 id="host-location" data-location="<%= @activity.city %>">Hosted by <%= @activity.host.first_name %> in <%= @activity.city %></h5>
  </div>

  <div class="activity-duration-size">
    <p><i class="fas fa-hourglass-start"></i> <%= @activity.duration %> hours</p>
    <p><i class="fas fa-user-friends"></i> Max <%= @activity.max_group_size %> people</p>
    <p><i class="fas fa-dollar-sign"></i> <%= @activity.price_per_person %> per person</p>
  </div>

  <% if current_user.nil? %>
  <%= link_to "Book Now!", new_user_session_path, class: "book-button" %>
  <% else %>
  <%= link_to "Book Now!", new_activity_user_booking_path(@activity, current_user), class: "book-button" %>
  <% end %>
</div>

<div class="activity-description">
<h4>What you'll do:</h4>
<p><%= @activity.description %></p>
</div>

<div class="activity-reviews">
  <h4>Reviews</h4>
  <% if @reviews.empty? %>
  <p>No reviews for this activity yet!</p>
  <% else %>
    <% @reviews.each do |review| %>
      <p><%= review.content %></p>
      <p><strong>Rating</strong>: <%= review.rating %>/5</p>
      <p><strong>By</strong>: <%= review.user.first_name %></p>
    <% end %>
  <% end %>
</div>
<div id="map" style="height: 300px; width: 600px"></div>



